@page
@model Cipa.Pages.MailDelivery.MailDeliverySetup
@{
    ViewData["Title"] = "Mail setup Page";
}
<div class="text-center">
    <h3> Выберите <strong>страну</strong> для отправки сообщений на почту </h3>
    <hr />
    <div style="display: inline;">
        <form id="CountryView" method="post" style="display: inline-flex;">
            <div style=" padding: 20px;">
                <select asp-for="BatchId" asp-items="@(new SelectList(Model.MailBatches, "BatchId", "BatchName"))" required>
                    <option value="" selected disabled> --Выберите Рассылку--</option>
                </select>
                <br />

                <span asp-validation-for="BatchId" class="text-danger"></span>
            </div>
        
            <div style=" padding: 20px;">
                <select asp-for="CountryId" asp-items="@(new SelectList(Model.Countries, "CountryId", "CountryName"))" required>
                    <option value="" selected disabled> --Выберите Страну--</option>
                </select>
                <br />

                <span asp-validation-for="CountryId" class="text-danger"></span>
            </div>
        
            <div style=" padding: 15px;">
                <input type="submit" value="Generate script" class="btn btn-primary">
            </div>
        </form>
    </div>
    <hr />
    <h3>Выберите <strong>город</strong> для отправки сообщений на почту</h3>
    <hr />
    <div style="display: inline;">
        <form id="CityView" method="post" style="display: inline-flex;">
            <div style=" padding: 20px;">
                <select asp-for="BatchId" asp-items="@(new SelectList(Model.MailBatches, "BatchId", "BatchName"))" required>
                    <option value="" selected disabled> --Выберите Рассылку--</option>
                </select>
                <br />

                <span asp-validation-for="BatchId" class="text-danger"></span>
            </div>
    
            <div style=" padding: 20px;">
                <select asp-for="CityId" asp-items="@(new SelectList(Model.Cities, "CityId", "CityName"))" required>
                    <option value="" selected disabled> --Выберите Город--</option>
                </select>
                <br />

                <span asp-validation-for="CityId" class="text-danger"></span>
            </div>
    
            <div style=" padding: 15px;">
                <input type="submit" value="Generate script" class="btn btn-primary">
            </div>
        </form>
    </div>
    <div style="color: red; border: red 1px;">@Model.Message</div>
</div>